  "governance_and_compliance": [
    {
      "aspect": "Version Control",
      "requirements": [
        "All documentation must be version controlled",
        "Changes tracked with meaningful commit messages",
        "Branching strategy aligned with code development",
        "Release tags for documentation versions"
      ]
    },
    {
      "aspect": "Review and Approval",
      "requirements": [
        "Peer review required for all documentation",
        "Subject matter expert approval for technical content",
        "Legal review for compliance-related documentation",
        "Stakeholder sign-off for business requirements"
      ]
    },
    {
      "aspect": "Access Control",
      "requirements": [
        "Role-based access to sensitive documentation",
        "Public documentation accessible to all team members",
        "External documentation with appropriate permissions",
        "Audit trail of access and modifications"
      ]
    },
    {
      "aspect": "Retention and Archival",
      "requirements": [
        "Documentation retention policy defined",
        "Archived versions maintained for regulatory compliance",
        "Search and retrieval capabilities for historical documents",
        "Regular cleanup of obsolete documentation"
      ]
    }
  ],
