{
  "documentation_standards": {
    "project": "AI Financial Health Analyzer",
    "methodology": "BMAD Documentation Framework",
    "version": "1.0",
    "effective_date": "2025-01-06",
    "philosophy": "Documentation as code - living, versioned, and integrated"
  },
  "documentation_categories": [
    {
      "category": "Technical Documentation",
      "description": "Code, architecture, and system documentation",
      "audience": "Developers, Architects, Operations",
      "maintenance": "Continuous with code changes",
      "standards": [
        "Code comments and inline documentation",
        "API documentation (OpenAPI/Swagger)",
        "Architecture Decision Records (ADRs)",
        "Database schema documentation",
        "Infrastructure as Code documentation"
      ]
    },
    {
      "category": "Business Documentation",
      "description": "Requirements, processes, and business rules",
      "audience": "Product Owners, Business Analysts, Stakeholders",
      "maintenance": "Updated with requirement changes",
      "standards": [
        "Business Requirements Documents (BRDs)",
        "User stories and acceptance criteria",
        "Business process documentation",
        "Compliance and regulatory documentation",
        "Risk and mitigation documentation"
      ]
    },
    {
      "category": "User Documentation",
      "description": "End-user guides and help content",
      "audience": "End Users, Customer Support, Training Teams",
      "maintenance": "Updated with feature releases",
      "standards": [
        "User manuals and guides",
        "Feature documentation and tutorials",
        "FAQ and troubleshooting guides",
        "Video tutorials and walkthroughs",
        "Context-sensitive help content"
      ]
    },
    {
      "category": "Operational Documentation",
      "description": "Deployment, monitoring, and maintenance guides",
      "audience": "DevOps, SRE, Operations Teams",
      "maintenance": "Updated with infrastructure changes",
      "standards": [
        "Deployment and configuration guides",
        "Monitoring and alerting documentation",
        "Incident response procedures",
        "Backup and recovery procedures",
        "Performance tuning guides"
      ]
    },
    {
      "category": "Project Documentation",
      "description": "Project management and process documentation",
      "audience": "Project Teams, Management, Auditors",
      "maintenance": "Updated throughout project lifecycle",
      "standards": [
        "Project plans and timelines",
        "Meeting minutes and decisions",
        "Status reports and metrics",
        "Lessons learned documentation",
        "Change management records"
      ]
    }
  ],
  "documentation_templates": [
    {
      "template": "Architecture Decision Record (ADR)",
      "purpose": "Document significant architectural decisions",
      "format": "Markdown",
      "location": "/docs/decisions/",
      "structure": {
        "sections": [
          "Title",
          "Status (Proposed/Accepted/Deprecated/Superseded)",
          "Context",
          "Decision",
          "Consequences",
          "Related Decisions"
        ],
        "naming_convention": "YYYYMMDD-decision-title.md",
        "review_process": "Technical Lead approval required"
      }
    },
    {
      "template": "API Documentation",
      "purpose": "Document REST API endpoints and usage",
      "format": "OpenAPI 3.0 (Swagger)",
      "location": "/docs/api/",
      "structure": {
        "sections": [
          "Endpoint description",
          "Request/Response schemas",
          "Authentication requirements",
          "Error codes and messages",
          "Usage examples"
        ],
        "generation": "Auto-generated from code annotations",
        "review_process": "Code review integration"
      }
    },
    {
      "template": "User Story Documentation",
      "purpose": "Detailed user story specifications",
      "format": "Markdown + YAML metadata",
      "location": "/docs/stories/",
      "structure": {
        "sections": [
          "User story statement",
          "Acceptance criteria",
          "Business rules",
          "UI/UX mockups",
          "Technical considerations",
          "Testing scenarios"
        ],
        "naming_convention": "STORY-ID-brief-description.md",
        "review_process": "Product Owner approval"
      }
    },
    {
      "template": "Deployment Guide",
      "purpose": "Step-by-step deployment instructions",
      "format": "Markdown with code blocks",
      "location": "/docs/deployment/",
      "structure": {
        "sections": [
          "Prerequisites",
          "Environment setup",
          "Deployment steps",
          "Verification procedures",
          "Rollback procedures",
          "Troubleshooting"
        ],
        "validation": "Tested in staging environment",
        "review_process": "Operations team approval"
      }
    },
    {
      "template": "Incident Response Playbook",
      "purpose": "Standardized incident response procedures",
      "format": "Markdown with checklists",
      "location": "/docs/operations/playbooks/",
      "structure": {
        "sections": [
          "Incident classification",
          "Initial response steps",
          "Investigation procedures",
          "Escalation criteria",
          "Communication templates",
          "Post-incident procedures"
        ],
        "testing": "Regular incident simulation drills",
        "review_process": "Quarterly review and updates"
      }
    }
  ],
  "documentation_workflow": {
    "creation_process": [
      {
        "step": 1,
        "action": "Identify documentation need",
        "trigger": "New feature, architecture change, process update",
        "owner": "Feature owner or technical lead"
      },
      {
        "step": 2,
        "action": "Select appropriate template",
        "criteria": "Audience, purpose, and maintenance requirements",
        "owner": "Documentation coordinator"
      },
      {
        "step": 3,
        "action": "Create initial draft",
        "timeline": "Within 48 hours of trigger event",
        "owner": "Subject matter expert"
      },
      {
        "step": 4,
        "action": "Peer review",
        "criteria": "Accuracy, completeness, clarity",
        "owner": "Technical reviewer"
      },
      {
        "step": 5,
        "action": "Stakeholder approval",
        "criteria": "Business alignment and compliance",
        "owner": "Designated approver"
      },
      {
        "step": 6,
        "action": "Publication and distribution",
        "method": "Version control + notification",
        "owner": "Documentation coordinator"
      }
    ],
    "maintenance_process": [
      {
        "trigger": "Code changes",
        "action": "Update technical documentation",
        "timeline": "Same pull request",
        "responsibility": "Developer"
      },
      {
        "trigger": "Feature releases",
        "action": "Update user documentation",
        "timeline": "Before release deployment",
        "responsibility": "Product owner + Technical writer"
      },
      {
        "trigger": "Process changes",
        "action": "Update operational documentation",
        "timeline": "Within 24 hours",
        "responsibility": "Process owner"
      },
      {
        "trigger": "Quarterly review",
        "action": "Audit all documentation",
        "timeline": "End of each quarter",
        "responsibility": "Documentation coordinator"
      }
    ]
  },
  "quality_standards": [
    {
      "standard": "Accuracy",
      "description": "Documentation reflects current state of system/process",
      "measurement": "Regular audits and user feedback",
      "target": "95% accuracy rate"
    },
    {
      "standard": "Completeness",
      "description": "All necessary information included for target audience",
      "measurement": "Completeness checklists and review criteria",
      "target": "100% of required sections completed"
    },
    {
      "standard": "Clarity",
      "description": "Clear, concise, and understandable language",
      "measurement": "Readability scores and user feedback",
      "target": "Flesch Reading Ease score >60"
    },
    {
      "standard": "Consistency",
      "description": "Consistent style, format, and terminology",
      "measurement": "Style guide compliance checks",
      "target": "100% compliance with style guide"
    },
    {
      "standard": "Currency",
      "description": "Documentation is up-to-date and relevant",
      "measurement": "Last updated timestamps and review dates",
      "target": "No documentation older than 6 months without review"
    }
  ],
