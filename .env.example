# Environment Configuration for GoodBuy HQ
# Copy this file to .env.local and update with your actual values

# Application Settings
NEXT_PUBLIC_APP_NAME="GoodBuy HQ"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/goodbuy_hq"

# Authentication (NextAuth.js)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-very-secure-secret-key-32-characters-minimum"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Microsoft Azure AD (optional)
# AZURE_AD_CLIENT_ID="your-azure-ad-client-id"
# AZURE_AD_CLIENT_SECRET="your-azure-ad-client-secret"
# AZURE_AD_TENANT_ID="your-azure-ad-tenant-id"

# API Keys
NEXT_PUBLIC_API_URL="/api"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Analytics
NEXT_PUBLIC_GA_ID=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEBUG="true"
NEXT_PUBLIC_ENABLE_EMAIL="false"